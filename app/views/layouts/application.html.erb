<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= render 'layouts/shim' %>
  </head>
  <body>
    <%  unless request.path == signin_path || request.path == signup_path || request.path == sessions_path || request.path == contact_path
      %>
    <div class="shell">
        
        <%= render 'layouts/header' %>
              
        <div class="container">
          <% flash.each do |key, value| %>
            <div class="alert alert-<%= key %>"> <%= value %> </div>
          <% end %> 
          <%= yield %>
          <!--<%= render 'layouts/footer' %> -->
          <!--<%= debug(params) if Rails.env.development? %> -->
        </div>
    </div>
    <% end %>

    <% if request.path == signin_path || request.path == signup_path || request.path == sessions_path || request.path == contact_path %>    
      <%= yield %>
    <% end %>
  </body>
</html>